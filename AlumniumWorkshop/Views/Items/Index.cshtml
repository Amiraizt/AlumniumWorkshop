@using Alumnium.Core
@model IEnumerable<AlumniumWorkshop.Models.Item.ItemModel>

@{
    ViewData["Title"] = "Index";
}

<hr />

<p>
    <div class="row">
        <div class="form-group">
            @* <label for="exampleInputFile">Upload Slider Image</label> *@

            <form enctype="multipart/form-data" asp-controller="Report" asp-action="ViewItemsReport" method="post">
                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label" for="exampleInputFile">Start date</label>
                        <input type="date" class="form-control" name="startDate">
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label" for="exampleInputFile">End date</label>
                        <input type="date" class="form-control" name="endDate">
                    </div>
                </div>
                <br />
                <div class="col-md-3">
                    <button type="submit" value="Submit" class="btn btn-sm btn-primary col-md-6">Create report</button>

                </div>
            </form>

        </div>
    </div>
</p>
<hr />
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Items</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="datatable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Quantity
                                </th>
                                <th>Price</th>
                                <th>Status</th>
                                <th> Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Quantity)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UnitPrice)
                                    </td>
                                    <td>
                                        @if (@item.Status == Consts.ACTIVE)
                                        {
                                            <a class="btn btn-sm btn-primary" asp-action="ChangeStatus" asp-route-id="@item.Id"> ON </a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-sm btn-danger" asp-action="ChangeStatus" asp-route-id="@item.Id"> OFF</a>

                                        }

                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-icon btn-bg-light btn-active-color-primary btn-sm me-1">
                                            <i class="ki-duotone ki-pencil fs-2">
                                                <span class="path1"></span>
                                                <span class="path2"></span>
                                            </i>
                                        </a>
                                        
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</section>
