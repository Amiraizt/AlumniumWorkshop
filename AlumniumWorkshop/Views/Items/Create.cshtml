@model AlumniumWorkshop.Models.Item.ItemModel

@{
    ViewData["Title"] = "Create";
}

<hr />
<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="card">
            <div class="card-header card-thareed">
                <h3 class="card-title"> New Item</h3>
            </div>
            <form enctype="multipart/form-data" method="post" asp-action="Create">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"> Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                   <br />
                    <div class="form-group">
                        <label asp-for="Quantity" class="control-label"> Quantity</label>
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="UnitPrice" class="control-label"> Price</label>
                        <input asp-for="UnitPrice" class="form-control" />
                        <span asp-validation-for="UnitPrice" class="text-danger"></span>
                    </div>
                    <div class="card-footer">
                        <input type="submit" value="Submit" style="float:right" class="btn btn-sm btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>
<br />
<div>
    <a asp-action="Index" class="btn btn-sm btn-primary">Back to List</a>
</div>
